#!/bin/bash

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" > /dev/null 2>&1 && pwd)"
CWD="$(pwd)"

# Switch into the Brite repository and build Brite.
cd "$DIR/.."
stack build

# Switch back into the directory this script was called from and execute Brite.
# We find this is faster than using `stack run`.
cd "$CWD"
$DIR/../.stack-work/dist/x86_64-osx/Cabal-2.2.0.1/build/brite-exe/brite-exe $@
