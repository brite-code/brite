{
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": true
      }
    ]
  },
  "exclude": ["**/node_modules"]
}
