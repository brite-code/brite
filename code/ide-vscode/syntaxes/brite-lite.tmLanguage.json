{
  "scopeName": "source.brite-lite",
  "fileTypes": ["lite"],
  "foldingStartMarker": "[(]",
  "foldingStopMarker": "[)]",
  "patterns": [
    {
      "name": "storage.type.brite-lite",
      "match": "\b(let|in)\b"
    },
    {
      "name": "keyword.control.brite-lite",
      "match": "\b(if|then|else)\b"
    },
    {
      "name": "support.type.primitive.brite-lite",
      "match": "\b(boolean|number)\b"
    },
    {
      "name": "constant.language.boolean.true.brite-lite",
      "match": "\btrue\b"
    },
    {
      "name": "constant.language.boolean.false.brite-lite",
      "match": "\bfalse\b"
    },
    {
      "name": "variable.other.brite-lite",
      "match": "\b[a-zA-Z0-9_]+[']*\b"
    }
  ]
}
